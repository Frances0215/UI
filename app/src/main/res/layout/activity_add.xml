<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddActivity"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/主题蓝"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="名称"
            android:layout_marginTop="10dp"
            android:textSize="20sp"
            android:layout_marginLeft="20dp"/>
        <EditText
            android:id="@+id/mEtName"
            android:layout_width="300dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="90dp"
            android:background="@drawable/edit_background"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="地址_x"
            android:textSize="20sp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="50dp"/>
        <EditText
            android:id="@+id/mEtAddX"
            android:layout_width="300dp"
            android:layout_height="30dp"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/edit_background"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="地址_y"
            android:textSize="20sp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="90dp"/>
        <EditText
            android:id="@+id/mEtAddY"
            android:layout_width="300dp"
            android:layout_height="30dp"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="90dp"
            android:background="@drawable/edit_background"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="范围"
            android:textSize="20sp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="130dp"/>
        <EditText
            android:id="@+id/mEtRadius"
            android:layout_width="300dp"
            android:layout_height="30dp"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="130dp"
            android:background="@drawable/edit_background"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="等级"
            android:textSize="20sp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="170dp"/>

        <RadioGroup
            android:id="@+id/mRgClass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="170dp"
            android:layout_marginLeft="90dp">
            <RadioButton
                android:id="@+id/mRbLow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="低风险"
                android:textSize="15sp"/>
            <RadioButton
                android:id="@+id/mRbMid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="中风险"
                android:textSize="15sp"/>
            <RadioButton
                android:id="@+id/mRbHigh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="高风险"
                android:textSize="15sp"/>
        </RadioGroup>


    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/map3">
        <Button
            android:id="@+id/mBtAdd"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:background="@color/主题蓝"
            android:text="确定"
            android:layout_marginTop="420dp"
            />

    </FrameLayout>

</LinearLayout>